{
  "name": "zlvue",
  "version": "0.0.1",
  "description": "zlvue",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -C play dev",
    "build": "gulp --require @esbuild-kit/cjs-loader -f build/gulpfile.ts",
    "prepare": "npx husky install",
    "type-check": "vue-tsc --noEmit",
    "build-only": "vite build --mode prod",
    "lint": "lint-staged",
    "release": "standard-version",
    "commit": "npm run format && git add . && npm run lint && git cz",
    "genlog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "format": "prettier --write ./",
    "start": "gulp --require @esbuild-kit/cjs-loader -f build/gulpfile.ts "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhongliang001/zlvue.git"
  },
  "keywords": [
    "zlvue",
    "vue"
  ],
  "author": "coolzl",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zhongliang001/zlvue/issues"
  },
  "homepage": "https://github.com/zhongliang001/zlvue#readme",
  "dependencies": {
    "@zl-vue/components": "workspace:^",
    "@zl-vue/theme-chalk": "workspace:^",
    "@zl-vue/utils": "workspace:^"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@esbuild-kit/cjs-loader": "^2.4.4",
    "@rollup/plugin-commonjs": "^25.0.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rushstack/eslint-patch": "^1.5.1",
    "@types/gulp": "^4.0.14",
    "@types/gulp-autoprefixer": "^0.0.35",
    "@types/gulp-clean-css": "^4.3.2",
    "@types/gulp-sass": "^5.0.2",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.51.0",
    "eslint-plugin-vue": "^9.17.0",
    "fast-glob": "^3.3.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "gulp-scss": "^1.4.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "gulp-vueify": "^0.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "rollup": "^4.0.2",
    "rollup-plugin-esbuild": "^6.1.0",
    "sass": "^1.69.0",
    "standard-version": "^9.5.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "terser": "^5.21.0",
    "tsx": "^3.13.0",
    "typescript": "^4.9.5",
    "unplugin-vue-macros": "^2.6.1",
    "vite": "^4.4.11",
    "vite-plugin-dts": "^3.6.0",
    "vite-plugin-libcss": "^1.1.1",
    "vue": "3.2.45",
    "vue-tsc": "^1.8.16"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  }
}
