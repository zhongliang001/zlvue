{
  "name": "zlvue",
  "version": "0.0.1",
  "description": "zlvue",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -C play dev",
    "build": "pnpm run -C internal/build start",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "prepare": "npx husky install",
    "type-check": "vue-tsc --noEmit",
    "build-only": "vite build --mode prod",
    "lint": "lint-staged",
    "release": "standard-version",
    "commit": "npm run format && git add . && npm run lint && git cz",
    "genlog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "format": "prettier --write ./",
    "start": "gulp --require @esbuild-kit/cjs-loader -f build/gulpfile.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhongliang001/zlvue.git"
  },
  "keywords": [
    "zlvue",
    "vue"
  ],
  "author": "coolzl",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zhongliang001/zlvue/issues"
  },
  "homepage": "https://github.com/zhongliang001/zlvue#readme",
  "dependencies": {
    "@zl-vue/build": "workspace:^1.0.0",
    "@zl-vue/components": "workspace:^",
    "@zl-vue/theme-chalk": "workspace:^",
    "@zl-vue/utils": "workspace:^",
    "zl-vue": "workspace:0.0.0-dev.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@esbuild-kit/cjs-loader": "2.2.1",
    "@pnpm/find-workspace-packages": "4.0.16",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "8.4.0",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rushstack/eslint-patch": "^1.5.1",
    "@types/fs-extra": "9.0.13",
    "@types/gulp": "4.0.9",
    "@types/gulp-autoprefixer": "^0.0.35",
    "@types/gulp-clean-css": "^4.3.2",
    "@types/gulp-sass": "^5.0.2",
    "@types/node": "*",
    "@vitejs/plugin-vue": "2.3.3",
    "@vitejs/plugin-vue-jsx": "1.3.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.1.3",
    "chalk": "5.0.1",
    "commitizen": "^4.3.0",
    "consola": "2.15.3",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "esbuild": ">=0.13",
    "eslint": "^8.51.0",
    "eslint-plugin-vue": "^9.17.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "10.1.0",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "gulp-scss": "^1.4.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "gulp-vueify": "^0.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "rimraf": "3.0.2",
    "rollup": "2.75.7",
    "rollup-plugin-esbuild": "4.9.1",
    "sass": "^1.69.0",
    "standard-version": "^9.5.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "terser": "^5.21.0",
    "ts-morph": "14.0.0",
    "tsx": "^3.13.0",
    "typescript": ">=4.9.5",
    "unplugin-vue-define-options": "^1.3.18",
    "unplugin-vue-macros": "0.11.2",
    "vite": "^2.9.15",
    "vite-plugin-dts": "^3.6.0",
    "vite-plugin-inspect": "0.5.0",
    "vite-plugin-libcss": "^1.1.1",
    "vue": "3.2.37",
    "vue-tsc": "^1.8.16"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  }
}
