{
  "name": "zlvue",
  "version": "0.0.1",
  "description": "zlvue",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-p type-check build-only",
    "prepare": "npx husky install",
    "type-check": "vue-tsc --noEmit",
    "build-only": "vite build --mode prod",
    "lint": "lint-staged",
    "release": "standard-version",
    "commit": "git add . && npm run lint && git cz",
    "genlog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "format": "prettier --write ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhongliang001/zlvue.git"
  },
  "keywords": [
    "zlvue",
    "vue"
  ],
  "author": "coolzl",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zhongliang001/zlvue/issues"
  },
  "homepage": "https://github.com/zhongliang001/zlvue#readme",
  "dependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.14.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.4",
    "standard-version": "^9.5.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "^4.8.4",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.1.4",
    "vue-tsc": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  }
}